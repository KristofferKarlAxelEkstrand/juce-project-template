{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Standalone (Ninja Debug)",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}\\scripts\\build-ninja.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/scripts/build-ninja.sh"
            },
            "osx": {
                "command": "${workspaceFolder}/scripts/build-ninja.sh"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run Standalone",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}\\scripts\\run-standalone.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/scripts/run-standalone.sh"
            },
            "osx": {
                "command": "${workspaceFolder}/scripts/run-standalone.sh"
            },
            "dependsOn": "Build Standalone (Ninja Debug)",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Configure Ninja",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}\\scripts\\configure-ninja.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/scripts/configure-ninja.sh"
            },
            "osx": {
                "command": "${workspaceFolder}/scripts/configure-ninja.sh"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build Standalone (Ninja Release)",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}\\scripts\\build-ninja.bat",
                "args": ["--config", "Release"]
            },
            "linux": {
                "command": "${workspaceFolder}/scripts/build-ninja.sh",
                "args": ["--config", "Release"]
            },
            "osx": {
                "command": "${workspaceFolder}/scripts/build-ninja.sh",
                "args": ["--config", "Release"]
            },
            "group": "build",
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run Standalone (Release)",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}\\scripts\\run-standalone.bat",
                "args": ["Release"]
            },
            "linux": {
                "command": "${workspaceFolder}/scripts/run-standalone.sh",
                "args": ["Release"]
            },
            "osx": {
                "command": "${workspaceFolder}/scripts/run-standalone.sh",
                "args": ["Release"]
            },
            "dependsOn": "Build Standalone (Ninja Release)",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
